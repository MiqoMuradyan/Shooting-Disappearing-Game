{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: gcc build and debug active file",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-g", // Добавляем символы отладки
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lncurses" // Добавляем опцию для линковки с библиотекой NCurses
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}